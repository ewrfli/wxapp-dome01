/* Components/NavHeader/NavHeader.wxss */
.header{
  /* padding:0 20rpx; */
  margin-top: 20rpx;
}
.header .topTitle {
  font-size: 32rpx;
  line-height: 80rpx;
  color:#666;
}
.header .title{
  width: 100%;
  height: 70rpx;
  margin-top: -15rpx;
  position: relative;
}
.header .bigTitle{
  display: block;
  font-size: 42rpx;
  line-height: 80rpx;
}
.header .more{
  display: block;
  font-size: 28rpx;
  padding: 6rpx 12rpx;
  color:#333;
  margin-right: 10rpx;
  position: absolute;
  top: 18rpx;
  right: 10rpx;
  border: 1rpx solid #333;
  border-radius: 30rpx;
}